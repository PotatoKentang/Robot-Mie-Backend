generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../database/database.sqlite"
}

model Order {
  id          Int      @id @default(autoincrement())
  orderId     String
  orderNumber Int
  name        String
  quantity    Int
  price       Float
  status      String   @default("pending")
  createdAt   DateTime @default(now())
}

model Product {
  id               Int      @id @default(autoincrement())
  name             String
  price            Float
  image            String
  address          String
  callback_address String
  count            Int
  createdAt        DateTime @default(now())
}
